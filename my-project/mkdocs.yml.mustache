site_name: Cross-Square Feature Usage Event Catalog
site_description: Search and browse cash-cdf analytics events
site_author: "#darwin-square"

repo_url: https://github.com/darwin-square/x-sq-jobs-test
repo_name: "darwin-square/x-sq-jobs-test"
edit_uri: ""

# copyright: "Last Updated: {{ update_time }}"
copyright: "Last Updated: August 2024"

nav:
  - "Home": index.md
  # The output of the event audit list (a big table)
  - "Event Audit/Summary": event_audit.md
  # - "Global Types": global_types.md

  - "Documentation":
    - "How-to Guides": how-to.md
    - "Definition Format": format.md
  #  - "Analytics Debugger": debugger.md
  #  - "CDF Command Line": cli.md

  - "Last Updated" :
  #  - "{{ update_time }}" : "https://github.com/squareup/cash-cdf/commits/gh-pages-event-browser"
    - "August 2024" : "https://github.com/squareup/cash-cdf/commits/gh-pages-event-browser"

  # TODO:
  # A page that makes it easy to create new events with validation
  #- "Event Creation Tool": event_creation_tool.md

  - "Events" :
  {{# entities }}
    - "{{ entity_name }}" : 
      - "{{ entity_name }}/index.md"
    {{# actions }}
      - "{{ action_name }}" : 
        - "{{ entity_name }}/{{ action_name }}/index.md"
      {{# events }}
        - "{{ event_name }}" : {{ entity_name }}/{{ action_name }}/{{ event_name }}.md
      {{/ events }}
    {{/ actions }}
  {{/ entities }}

  {{#hasTagGroups}}- "Tags":{{/hasTagGroups}}
  {{# tagGroups }}
    - {{ name }}: tags/{{ identifier }}.md
  {{/ tagGroups }}

theme:
  name: material
  favicon: img/favicon.ico
  logo: img/logo.png
  features:
    - navigation.instant
    - navigation.sections
    - navigation.indexes
    - navigation.footer
  palette:
    - media: "(prefers-color-scheme: light)"
      primary: amber
      scheme: amber
      accent: amber
      toggle:
        icon: material/eye-outline
        name: Switch to dark mode
    - media: "(prefers-color-scheme: dark)"
      scheme: slate
      primary: amber
      accent: amber
      toggle:
        icon: material/eye
        name: Switch to light mode

extra_css:
  - "css/app.css"

extra:
  generator: false
  repo_icon: github
  search:
    tokenizer: '[\s\-\.]+'
  social:
    - icon: fontawesome/brands/github
      link: https://github.com/squareup/cash-cdf
    - icon: fontawesome/brands/slack
      link: https://cash.slack.com/channels/cash-cdf

markdown_extensions:
  - toc
  - attr_list
  - smarty
  - admonition
  - codehilite:
      guess_lang: false
  - def_list
  - footnotes
  - meta
  - pymdownx.betterem:
      smart_enable: all
  - pymdownx.caret
  - pymdownx.inlinehilite
  - pymdownx.magiclink
  - pymdownx.smartsymbols
  - pymdownx.superfences
  - pymdownx.details
  - pymdownx.critic
  - tables
  - pymdownx.tabbed
  - pymdownx.emoji:
      emoji_index: !!python/name:materialx.emoji.twemoji
      emoji_generator: !!python/name:materialx.emoji.to_svg
  - pymdownx.highlight:
      anchor_linenums: true
  - pymdownx.snippets
  - pymdownx.tilde

plugins:
 - search
 - tags
